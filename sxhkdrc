# BRIGHTNESS
XF86MonBrightnessUp
	brightnessctl set 2%+ && pkill -RTMIN+2 dwmblocks

XF86MonBrightnessDown
	brightnessctl set 2%- && pkill -RTMIN+2 dwmblocks

# VOLUME
XF86AudioRaiseVolume
	pamixer -i 2 && pkill -RTMIN+5 dwmblocks

XF86AudioLowerVolume
	pamixer -d 2 && pkill -RTMIN+5 dwmblocks

XF86AudioMute
	pamixer -t && pkill -RTMIN+5 dwmblocks

# DEFAULT BROWSER
super + w
	$BROWSER

# DEFAULT FILE MANAGER
super + e
	lf ~

# EMOJIS
alt + e
	dmenu_emojis.sh

# set WALLPAPER
alt + w
	dmenu_wallpapers.sh
